// Test simplified string interpolation syntax

def simplifiedSyntax() {
  // TODO, should also work 
  // without :number
  index: number = 5
  username = 'Alice'
  
  result1 = '#'index.toString()
  result2 = username' welcome!'
  result3 = 'Hello 'username', you are user #'index.toString()
  
  return result1 + result2 + result3
}

test('simplified string interpolation syntax', () => {
  result = simplifiedSyntax()
  expect(result).toBe('#5Alice welcome!Hello Alice, you are user #5')
})
