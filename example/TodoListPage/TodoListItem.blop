
TodoListItem = (attributes: object, _children: array): VNode => {
  { value,
    changeItem as change,
    removeItem,
    editItem,
    editMode
  } = attributes


  hooks = {
    insert: (vnode) => {
      vnode.elm.focus()
      vnode.elm.select()
    }
  }

  <li style={ marginBottom: '5px' }>
    <div class="form-row">
      <div class="col">
        if editMode {
          <input hooks class="form-control" type="text" value on={ change } />
        } else {
          <div on={ click: editItem } style={ padding: '10px' }>
            = value
            <span class="badge badge-secondary" style={ marginLeft: '10px' }>'click to edit'</span>
          </div>
        }
      </div>
      <div class="col">
        <button class="btn btn-secondary" on={ click: removeItem }>'delete'</button>
      </div>
    </div>
  </li>
}

