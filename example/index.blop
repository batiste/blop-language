import './style.css' as style

def navigationLinks(state) {
  def indexPage(e) {
    state.$.router.go('/')
    e.preventDefault()
  }
  def dogPage(e) {
    state.$.router.go('/dogs')
    e.preventDefault()
  }
  def todoPage(e) {
    state.$.router.go('/todo')
    e.preventDefault()
  }
  def astExplorerPage(e) {
    state.$.router.go('/ast')
    e.preventDefault()
  }
  def playgroundPage(e) {
    state.$.router.go('/playground')
    e.preventDefault()
  }
  return { dogPage, todoPage, astExplorerPage, playgroundPage, indexPage }
}

