{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"skipLibCheck": true,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "out",
		"rootDir": "src",
		"lib": [ "es6" ],
		"allowJs": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}